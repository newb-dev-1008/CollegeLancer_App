<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/prof_profileToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        <ImageView
            android:id="@+id/prof_profilePic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintTop_toBottomOf="@id/prof_profileToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"/>

        <EditText
            android:id="@+id/prof_profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            app:layout_constraintTop_toBottomOf="@id/prof_profilePic"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:inputType="none"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textSize="30sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/prof_profilePhNoTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profileName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/prof_profilePhNo"
            android:layout_marginStart="25dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="25sp"
            android:fontFamily="sans-serif-black"
            android:text="Your 10 Digit Phone Number:"/>

        <EditText
            android:id="@+id/prof_profilePhNo"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profilePhNoTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:inputType="number"
            android:maxLength="10"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/prof_DeptTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profilePhNo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="25sp"
            android:fontFamily="sans-serif-black"
            android:text="Department:"/>

        <EditText
            android:id="@+id/prof_profileDepartment"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_DeptTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="none"
            android:layout_marginStart="25dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/prof_profileEmailTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profileDepartment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="25sp"
            android:text="E-mail ID:"
            android:fontFamily="sans-serif-black"/>

        <EditText
            android:id="@+id/prof_profileEmail"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profileEmailTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:inputType="none"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/prof_profileDOBTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profileEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="25sp"
            android:text="Date of Birth:"
            android:fontFamily="sans-serif-black"/>

        <EditText
            android:id="@+id/prof_profileDOB"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profileDOBTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:inputType="none"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/prof_profileUniversityTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profileDOB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="30sp"
            android:text="University:"
            android:fontFamily="sans-serif-black"/>

        <EditText
            android:id="@+id/prof_profileUniversity"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@id/prof_profileUniversityTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="30sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/prof_profileBioTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/prof_profileUniversity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="25sp"
            android:text="About:"
            android:fontFamily="sans-serif-black"/>

        <EditText
            android:id="@+id/prof_profileBio"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@id/prof_profileBioTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="25sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:cursorVisible="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prof_apply_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Changes"
            android:gravity="center_horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/prof_profileBio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prof_cancel_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/prof_apply_changes"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>