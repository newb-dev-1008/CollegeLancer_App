<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:padding="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collab1_name"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:gravity="start"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="4dp"
            android:text="Collaborator Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collab1_projectTitle"
            android:textSize="18sp"
            android:layout_below="@id/collab1_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:text="Project Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_complaintdate"
            android:text="Complaint ID: "
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:id="@+id/complaintIDTV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/complaintID"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:layout_toLeftOf="@id/reg_complaintstatus"
            android:layout_below="@id/complaintIDTV"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complaintID"
            android:visibility="gone"
            android:text="Description: "
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:id="@+id/complaintDescTV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complaintDescTV"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/complaint"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/reg_complaintstatus"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="15dp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>