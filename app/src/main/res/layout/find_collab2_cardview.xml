<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="@string/transitionAnimation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:padding="4dp"
    android:id="@+id/find_collab1_cardview"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collab1_name"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:gravity="start"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/collab2_projectStatus"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="4dp"
            android:text="Project Issuer Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/collab2_projectStatus"
            android:text="Open"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/green"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collab1_projectTitle"
            android:textSize="18sp"
            android:layout_below="@id/collab1_name"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/collab2_projectStatus"
            android:layout_marginStart="4dp"
            android:text="Project Title"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>